<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSettings"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#00163b" >

    <TextView
        android:id="@+id/tvSettingsLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:gravity="center"
        android:padding="18dp"
        android:text="@string/tv_settings_label"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/llSettingsScrollView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rlSettingsScrollView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp" >

                    <TextView
                        android:id="@+id/tvSettingsMusicLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="72dp"
                        android:text="@string/tv_settings_music_label"
                        android:textSize="36sp"
                        android:textColor="#ffffff" />

                    <ToggleButton
                        android:id="@+id/tbSettingsMusic"
                        android:textOn=""
                        android:textOff=""
                        android:background="@drawable/music_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="72dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llSettingsScrollView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp" >

                    <TextView
                        android:id="@+id/tvSettingsShopLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="72dp"
                        android:text="@string/tv_settings_shop_label"
                        android:textSize="36sp"
                        android:textColor="#ffffff" />

                    <ImageButton
                        android:contentDescription="@string/ib_settings_shop_content_description"
                        android:id="@+id/ibSettingsShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="72dp"
                        android:background="@null"
                        android:src="@drawable/button_next" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llSettingsScrollView3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp" >

                    <TextView
                        android:id="@+id/tvSettingsCreditsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="72dp"
                        android:text="@string/tv_settings_credits_label"
                        android:textSize="36sp"
                        android:textColor="#ffffff" />

                    <ImageButton
                        android:id="@+id/ibSettingsCredits"
                        android:contentDescription="@string/ib_settings_credits_content_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="72dp"
                        android:background="@null"
                        android:src="@drawable/button_next" />
                </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>